extends: default

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
  indentation:
    spaces: 2
    indent-sequences: false
  document-start: disable
  empty-lines:
    max: 1
    max-start: 0
    max-end: 0
  line-length: disable
