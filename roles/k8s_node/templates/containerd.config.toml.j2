root = "/var/lib/k8s-containerd"
state = "/run/k8s-containerd"
subreaper = true
oom_score = -999

[grpc]
  address = "/run/k8s-containerd/containerd.sock"
  uid = 0
  gid = 0
  max_recv_message_size = 16777216
  max_send_message_size = 16777216

[debug]
  address = ""
  uid = 0
  gid = 0
  level = "info"

[metrics]
  address = ""
  grpc_histogram = false

[cgroup]
  path = ""

[plugins]
  [plugins.cgroups]
    no_prometheus = false
  [plugins.cri]
    stream_server_address = "127.0.0.1"
    stream_server_port = "0"
    enable_selinux = false
    sandbox_image = "{{ k8s_node__kubelet_pod_infra_container_image }}"
    stats_collect_period = 10
    enable_tls_streaming = false
    max_container_log_line_size = 16384
    [plugins.cri.containerd]
      snapshotter = "overlayfs"
      default_runtime_name = "runc"
      [plugins.cri.containerd.default_runtime]
        runtime_type = "io.containerd.runc.v1"
        [plugins.cri.containerd.default_runtime.options]
          NoPivotRoot = false
          NoNewKeyring = false
          ShimCgroup = ""
          IoUid = 0
          IoGid = 0
          BinaryName = "{{ k8s_node__runc_bin_dir }}/runc"
          Root = ""
          CriuPath = ""
{% if k8s_node__kubelet_cgroup_driver == 'cgroupfs' %}
          SystemdCgroup = false
{% else %}
          SystemdCgroup = true
{% endif %}
      [plugins.cri.containerd.runtimes.runc]
        runtime_type = "io.containerd.runc.v1"
        pod_annotations = []
        [plugins.cri.containerd.runtimes.runc.options]
          NoPivotRoot = false
          NoNewKeyring = false
          ShimCgroup = ""
          IoUid = 0
          IoGid = 0
          BinaryName = "{{ k8s_node__runc_bin_dir }}/runc"
          Root = ""
          CriuPath = ""
{% if k8s_node__kubelet_cgroup_driver == 'cgroupfs' %}
          SystemdCgroup = false
{% else %}
          SystemdCgroup = true
{% endif %}
    [plugins.cri.cni]
      bin_dir = "{{ k8s_node__kubelet_cni_bin_dir }}"
      conf_dir = "{{ k8s_node__kubelet_cni_conf_dir }}"
      max_conf_num = 1
      conf_template = ""
    [plugins.cri.registry]
      [plugins.cri.registry.mirrors]
        [plugins.cri.registry.mirrors."docker.io"]
          endpoint = ["https://registry-1.docker.io"]
    [plugins.cri.x509_key_pair_streaming]
      tls_cert_file = ""
      tls_key_file = ""
  [plugins.diff-service]
    default = ["walking"]
  [plugins.linux]
    shim = "{{ k8s_node__containerd_bin_dir }}/containerd-shim-runc-v1"
    runtime = "{{ k8s_node__runc_bin_dir }}/runc"
    runtime_root = ""
    no_shim = false
    shim_debug = false
  [plugins.opt]
    path = "/opt/k8s-containerd"
  [plugins.restart]
    interval = "10s"
  [plugins.scheduler]
    pause_threshold = 0.02
    deletion_threshold = 0
    mutation_threshold = 100
    schedule_delay = "0s"
    startup_delay = "100ms"
